= form_for(@post) do |f|
  .field
    = f.label :title
    br
    = f.text_field :title, class: "form-control"
  .field
    = f.label :content
    br
    = f.cktext_area :content, class: "form-control"
  .field
    = f.label "Tags (separated by commas)"
    br
    = f.text_field :tag_list
  br
  .actions
    = f.submit(class: "btn btn-default")